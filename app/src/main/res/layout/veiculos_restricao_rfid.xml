<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/pgbProcurarTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip" />

        <TextView
            android:id="@+id/lblProcurandoTAG_Leitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procurando TAG"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
 <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
         <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#489cdf" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

         <Space
                android:layout_width="10px"
                android:layout_height="2dp" />
        <TextView
            android:id="@+id/lblTagDetectada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAG Detectada!"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

         <Space
                android:layout_width="10px"
                android:layout_height="2dp" />

       <TextView
           android:id="@+id/lblTipoLeitura"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tipo de Leitura:"
           android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>
    


    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/lblVeiculoEncontradoRFID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veículo encontrado!"
        android:textColor="#FFFFFF" />

   <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    
    <LinearLayout
        android:id="@+id/pnlDadosVeiculoRFID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados do Veículo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F3F3F" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#B1B1B1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/lblPlacaRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3F3F3F" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/lblModeloRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3F3F3F" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/lblMarcaRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3F3F3F" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/lblCorRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3F3F3F" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/lblAnoLicenciamentoRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano Licenciamento:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3F3F3F" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#B1B1B1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="4px"
                android:layout_height="2dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnNovoAitRFID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo AIT" />

</LinearLayout>