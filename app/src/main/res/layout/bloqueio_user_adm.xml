<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tela_bloqueio_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgNotificao"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/info" />

                <TextView
                    android:id="@+id/txtVInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="Informação"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtVInfoAdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="* Para acessar a página de configuração é necessário a autenticação do administrador!"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtPasswordAdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Autenticação do administrador:" />

                <EditText
                    android:id="@+id/edPasswordADM"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btnLoginAdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="AutenticarAdm"
                    android:text="Entrar nas Configurações" />
        </LinearLayout>
</RelativeLayout>