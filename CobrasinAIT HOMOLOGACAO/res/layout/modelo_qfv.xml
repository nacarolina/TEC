<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblFabricanteQFV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fabricante:" />

    <Button
        android:id="@+id/btnSelFabricante_QFV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecionar outro fabricante" />
    
        <TextView
        android:id="@+id/lblModelo_DetalhesQFV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o Modelo:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/txtModelo_QFV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnFiltrarModelo_QFV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filtrar" />
    </LinearLayout>

    <ListView
        android:id="@+id/lstModelo_QFV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
